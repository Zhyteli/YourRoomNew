<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.yourroom">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_house_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_house_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.YourRoom.mStyles"
        tools:targetApi="31">
        <activity
            android:name=".LogoActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.YourRoom.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".announcement.NewBuildingsActivity"/>
        <activity android:name=".announcement.DailyActivity"/>
        <activity android:name=".announcement.WarehouseActivity"/>
        <activity android:name=".announcement.RentActivity"/>
        <activity android:name=".LoginActivity" android:theme="@style/Theme.YourRoom.NoActionBar"/>
        <activity android:name=".announcement.ItemActivity" />
    </application>

</manifest>